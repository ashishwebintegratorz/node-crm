<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <style>
        * {
            font-family: gilroy;
            font-weight: 500;
        }
        body {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .user-card {
            flex: 0 0 20%;
            margin: 2%;
            padding: 3%;
            background-color: #ffffff;
            border-radius: 5%;
            border: 1px solid black;
            transition: transform 0.3s, box-shadow 0.3s;
            text-align: center;
        }
        .user-card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px 0 rgba(25, 187, 103, 0.4);
        }
        .user-button {
            display: block;
            width: 80%;
            margin: 5% auto 0;
            padding: 5%;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            text-decoration: none;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
            position: relative;
            overflow: hidden;
        }
        .user-button:hover {
            background-color: #45a049;
        }
        .user-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.2);
            transition: left 0.4s;
            z-index: 0;
            transform: translateX(-100%);
        }
        .user-button:hover::before {
            transform: translateX(0);
        }
        .user-button span {
            position: relative;
            z-index: 1;
        }
    </style>
</head>
<body>
    <% allUsers.forEach(function(user) { %>
        <div class="user-card">
            <h2>Username: <%= user.username %></h2>
            <h2>Name: <%= user.name %></h2>

            <form action="/admin/users/<%= user._id %>" method="GET">
                <button class="user-button" type="submit"><span>View Details</span></button>
            </form>
        </div>
    <% }) %>
</body>
</html>
